PORT=4000
CLIENT_ORIGIN=http://localhost:5173
LOG_FORMAT=dev

# Azure Speech Services (includes both ASR Speech-to-Text and TTS Text-to-Speech)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastasia

# Speech-to-Text (ASR) Settings
AZURE_ASR_LANGUAGE=zh-HK

# Text-to-Speech (TTS) Settings
AZURE_TTS_VOICE=zh-HK-HiuMaanNeural
AZURE_TTS_RATE=0%
AZURE_TTS_PITCH=0%

# Set TTS_PROVIDER=azure to enable Azure services; otherwise mock audio/text is used.
TTS_PROVIDER=mock

# HKBU LLM API (for intelligent conversation generation)
HKBU_API_KEY=your_hkbu_api_key_here
HKBU_BASE_URL=https://genai.hkbu.edu.hk/api/v0/rest
HKBU_MODEL=gpt-5
HKBU_API_VERSION=2024-12-01-preview

# Future integrations
GOOGLE_SPEECH_API_KEY=
OPENAI_API_KEY=
